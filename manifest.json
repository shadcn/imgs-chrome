{
  "manifest_version": 2,
  "name": "imgs.io",
  "description": "Transload images to imgs.io",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "notifications",
    "http://*/*",
    "https://*/*",
    "clipboardWrite",
    "clipboardRead"
  ],
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "browser_action": { 
    "default_icon": "images/icon-16.png",
    "default_popup" : "html/popup.html"
  },
  "background": {
    "scripts": [
      "js/jquery-1.9.1.min.js",
      "js/background.js"
    ]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js" : ["js/content_script.js"]
  }]
}